@model WEB.ViewModels.EditViewModel

<form asp-controller="Todo" asp-action="Edit" method="post">

    @Html.AntiForgeryToken()

    <div class="form-row">
        <div class="col-1">
            <label>Id : @Model.task.Id</label>
        </div>
        <div class="col">
            <input type="hidden" name="id" value="@Model.task.Id" />
            <input type="text" class="form-control" id="txtContent" name="content" placeholder="Content" value="@Model.task.Content">
        </div>
        <div class="col-1">
            <button type="submit" class="btn btn-success">Edit</button>
        </div>

    </div>


</form>